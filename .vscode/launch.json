    "version": "0.2.0",
    "configurations": [
        {
            "command": "bun run vite --open",
            "name": "Launch Dev",
            "request": "launch",
            "type": "node-terminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "command": "bun run vite",
            "name": "Launch Dev no open",
            "request": "launch",
            "type": "node-terminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "command": "bun run script generate-client",
            "name": "Generate Client",
            "request": "launch",
            "type": "node-terminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "command": "bunx --bun vite build",
            "name": "Build",
            "request": "launch",
            "type": "node-terminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
{
    "type": "firefox",
    "request": "launch",
    "reAttach": true,
    "name": "Launch firefox",
    "url": "http://localhost:5173/rpg-hell-frontend",
    "webRoot": "${workspaceFolder}"
}
